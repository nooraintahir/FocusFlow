<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/squiggle_top"
        android:layout_width="245dp"
        android:layout_height="125dp"
        android:src="@drawable/signup_squiggle"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">
    </ImageView>

    <TextView
        android:id="@+id/forgot_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot\npassword?"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="90dp"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="#000000">
    </TextView>

    <TextView
        android:id="@+id/email_txt"
        android:layout_below="@id/forgot_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="24dp"
        android:textSize="24sp">
    </TextView>

    <EditText
        android:id="@+id/email_edittxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_txt"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter email"
        android:textSize="24sp"
        android:textColorHint="#989898">
    </EditText>

    <TextView
        android:id="@+id/verification_txt"
        android:layout_below="@id/email_edittxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification code"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:textSize="24sp">
    </TextView>

    <EditText
        android:id="@+id/verification_edittxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verification_txt"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter code"
        android:textSize="24sp"
        android:textColorHint="#989898">
    </EditText>

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="240dp"
        android:layout_height="57dp"
        android:layout_below="@id/verification_edittxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Reset"
        android:textSize="18sp"
        android:backgroundTint="#15616D">
    </Button>

    <LinearLayout
        android:id="@+id/resend_btn"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="Verfication code not received?"
            android:textColor="#78290F"
            android:textSize="17sp"
            android:layout_marginRight="6dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:text="Resend"
            android:textColor="#78290F"
            android:textSize="17sp"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>

</RelativeLayout>