<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="62dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="#FFFFFF"
            android:paddingTop="17dp"
            android:paddingLeft="12dp">
            <ImageButton
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/backicon_whitebg"
                android:background="@android:color/transparent">
            </ImageButton>

            <TextView
                android:id="@+id/add_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Task"
                android:layout_below="@+id/back"
                android:textSize="40sp"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:paddingLeft="26dp"
                android:textStyle="bold">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/title_txt"
            android:layout_width="370dp"
            android:layout_height="63dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/top_bar"
            android:background="@drawable/add_task_title_shadow">
            <RelativeLayout
                android:layout_width="358dp"
                android:layout_height="60dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/add_task_title">
            </RelativeLayout>
            <EditText
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Enter Title..."
                android:layout_marginLeft="28dp"
                android:background="#FFFFFF">
            </EditText>
            <RelativeLayout
                android:id="@+id/memo_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/task_color"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp">
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/project_properties"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_txt"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">
                </Space>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textColor="#989898"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:id="@+id/due_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="1 January 2000"
                    android:textSize="19sp"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="18dp">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">
                </Space>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time"
                    android:textColor="#989898"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="9.00 - 10.00 am"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:background="@android:color/transparent">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="18dp">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">
                </Space>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Location"
                    android:textColor="#989898"
                    android:textSize="20sp">
                </TextView>
                <EditText
                    android:id="@+id/location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:hint="e.g.: Office"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:background="#FFFFFF">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="18dp">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33">
                </Space>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Completed"
                    android:textColor="#989898"
                    android:textSize="20sp">
                </TextView>
                <CheckBox android:id="@+id/checkbox_completed"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_marginLeft="7dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="18dp">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">
                </Space>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Assigned to"
                    android:textColor="#989898"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:id="@+id/assigned_to"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.46"
                    android:textSize="19sp">
                </TextView>
                <ImageButton
                    android:id="@+id/assign_dropdown"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/assigned_dropdown"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical">
                </ImageButton>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="20dp"
                android:background="#000000" />
            <EditText
                android:id="@+id/notes_edittxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Notes (if any)"
                android:textColor="#989898"
                android:gravity="top"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="22dp"
                android:background="#FFFFFF">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="-60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="3">
            <Button
                android:id="@+id/delete_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Delete"
                android:background="@android:color/transparent"
                android:textColor="#B41D1D"
                android:textSize="17sp"
                android:textStyle="bold">
            </Button>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.24">
            </Space>
            <RelativeLayout
                android:id="@+id/update_btn"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginTop="-10dp"
                android:background="@drawable/update_btn_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"
                    android:textSize="17sp"
                    android:textStyle="bold">
                </TextView>
            </RelativeLayout>
        </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_navbar"
        android:layout_below="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#000000"
        android:layout_marginTop="-62dp">

        <LinearLayout
            android:id="@+id/nav_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_alignParentBottom="true"
            android:gravity="center">
            <ImageButton
                android:id="@+id/team_btn"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:src="@drawable/team_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/notif_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/notifs_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/home_btn"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:src="@drawable/home_btn"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/list_btn"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:src="@drawable/list_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/profile_btn"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:src="@drawable/profile_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>