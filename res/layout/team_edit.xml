<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="62dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="#000000"
            android:paddingTop="17dp"
            android:paddingLeft="20dp">
            <ImageButton
                android:id="@+id/back"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/backicon_blackbg"
                android:background="@android:color/transparent">
            </ImageButton>

            <TextView
                android:id="@+id/team_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Name"
                android:layout_below="@+id/back"
                android:textSize="38sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="45dp"
                android:paddingLeft="18dp"
                android:textStyle="bold">
            </TextView>
            <ImageButton
                android:id="@+id/menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/team_menu"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="68dp"
                android:layout_marginRight="24dp">
            </ImageButton>

            <TextView
                android:id="@+id/team_desc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description..."
                android:layout_below="@+id/team_txt"
                android:textSize="19sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp">
            </TextView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/team_properties"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_bar"
            android:orientation="vertical"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="18dp">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">
                </Space>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add member"
                    android:textColor="#989898"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:id="@+id/add_member"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.46"
                    android:textSize="19sp">
                </TextView>
                <ImageButton
                    android:id="@+id/add_member_dropdown"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/assigned_dropdown"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_vertical">
                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="18dp">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.29">
                </Space>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Team color"
                    android:textColor="#989898"
                    android:textSize="20sp">
                </TextView>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1">
                </Space>
                <ImageButton
                    android:id="@+id/option_15616D"
                    android:layout_width="0dp"
                    android:layout_height="23dp"
                    android:layout_weight="0.165"
                    android:src="@drawable/option_15616D"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent">
                </ImageButton>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1">
                </Space>
                <ImageButton
                    android:id="@+id/option_78290F"
                    android:layout_width="0dp"
                    android:layout_height="23dp"
                    android:layout_weight="0.165"
                    android:src="@drawable/option_78290F"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent">
                </ImageButton>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1">
                </Space>
                <ImageButton
                    android:id="@+id/option_C56F1F"
                    android:layout_width="0dp"
                    android:layout_height="23dp"
                    android:layout_weight="0.165"
                    android:src="@drawable/option_C56F1F"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent">
                </ImageButton>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1">
                </Space>
                <ImageButton
                    android:id="@+id/option_41406F"
                    android:layout_width="0dp"
                    android:layout_height="23dp"
                    android:layout_weight="0.165"
                    android:src="@drawable/option_41406F"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent">
                </ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="18dp"
                android:layout_marginRight="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes and links"
                    android:textColor="#989898"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp">
                </TextView>
                <EditText
                    android:id="@+id/notes_edittxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:layout_marginLeft="37dp">
                </EditText>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Members"
                    android:textColor="#989898"
                    android:textSize="20sp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="18dp">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="18dp"
                    android:text="Add new"
                    android:textSize="17.5sp"
                    android:textStyle="bold"
                    android:textColor="#989898">
                </TextView>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/members_LL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="-60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="3">
            <Button
                android:id="@+id/delete_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Delete"
                android:background="@android:color/transparent"
                android:textColor="#B41D1D"
                android:textSize="17sp"
                android:textStyle="bold">
            </Button>
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.24">
            </Space>
            <RelativeLayout
                android:id="@+id/update_btn"
                android:clickable="true"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginTop="-10dp"
                android:background="@drawable/update_btn_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"
                    android:textSize="17sp"
                    android:textStyle="bold">
                </TextView>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_navbar"
        android:layout_below="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#000000"
        android:layout_marginTop="-62dp">

        <LinearLayout
            android:id="@+id/nav_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_alignParentBottom="true"
            android:gravity="center">
            <ImageButton
                android:id="@+id/team_btn"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:src="@drawable/team_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/notif_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/notifs_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/home_btn"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:src="@drawable/home_btn"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/list_btn"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:src="@drawable/list_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/profile_btn"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:src="@drawable/profile_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>