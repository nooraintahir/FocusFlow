<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="62dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#2B312F"
            android:paddingTop="17dp"
            android:paddingLeft="20dp">
            <ImageButton
                android:id="@+id/back"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/backicon_graybg"
                android:background="@android:color/transparent">
            </ImageButton>

            <TextView
                android:id="@+id/notifs_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:layout_below="@+id/back"
                android:textSize="36sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="15dp"
                android:paddingLeft="17dp"
                android:textStyle="bold">
            </TextView>
            <ImageButton
                android:id="@+id/menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/project_menu"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="33dp"
                android:layout_marginRight="24dp">
            </ImageButton>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/notifs_LL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/top_bar">
        </LinearLayout>

    </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_navbar"
        android:layout_below="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#000000"
        android:layout_marginTop="-62dp">

        <LinearLayout
            android:id="@+id/nav_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_alignParentBottom="true"
            android:gravity="center">
            <ImageButton
                android:id="@+id/team_btn"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:src="@drawable/team_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/notif_btn"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/notifs_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/home_btn"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:src="@drawable/home_btn"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/list_btn"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:src="@drawable/list_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />

            <ImageButton
                android:id="@+id/profile_btn"
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:src="@drawable/profile_icon"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>