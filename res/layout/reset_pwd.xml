<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/squiggle_top"
        android:layout_width="245dp"
        android:layout_height="125dp"
        android:src="@drawable/signup_squiggle"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">
    </ImageView>

    <TextView
        android:id="@+id/enter_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter new\npassword"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="90dp"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="#000000">
    </TextView>

    <TextView
        android:id="@+id/pwd_txt"
        android:layout_below="@id/enter_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="24dp"
        android:textSize="24sp">
    </TextView>

    <EditText
        android:id="@+id/pwd_edittxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd_txt"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter password"
        android:textSize="24sp"
        android:textColorHint="#989898"
        android:inputType="textPassword">
    </EditText>

    <TextView
        android:id="@+id/pwd_reenter_txt"
        android:layout_below="@id/pwd_edittxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-enter password"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="24dp"
        android:textSize="24sp">
    </TextView>

    <EditText
        android:id="@+id/pwd_reenter_edittxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd_reenter_txt"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Enter password"
        android:textSize="24sp"
        android:textColorHint="#989898"
        android:inputType="textPassword">
    </EditText>

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:layout_below="@id/pwd_reenter_edittxt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Reset"
        android:textSize="18sp"
        android:backgroundTint="#15616D">
    </Button>

</RelativeLayout>